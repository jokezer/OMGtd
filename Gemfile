source 'https://rubygems.org'

ruby '2.1.0'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.0.4'

#authentication
gem 'devise'

# Use sqlite3 as the database for Active Record
#gem 'sqlite3'
gem 'pg'

# Use HAML
gem 'haml'
gem 'haml-rails'
# Haml coffee
gem 'haml_coffee_assets'
