= bootstrap_form_for(@project, url: "/projects/#{@project.name}",
  style: :horizontal, left: 'col-lg-2 col-md-2 col-sm-2',
  right: 'col-lg-9 col-md-9 col-sm-9') do |f|
  = f.text_field :title
  -#todo make it in helper
  .form-group
    %label.col-lg-2.control-label Name
    .col-lg-8
      .input-group
        %span.input-group-addon #
        = text_field_tag 'project[name]', @project.name, class:'form-control'
  =f.text_area :content, hide_label: :true, placeholder: 'Todo description...'
  =f.form_group(:project, label: {text: 'Prior'}) do
    = prior_buttons Todo.get_priors_collection, selected: @project.prior,
     model:'project', column:'prior'
  %p state #{@project.state}
  = f.form_group do
    = f.submit 'Update', class: 'btn btn-primary'