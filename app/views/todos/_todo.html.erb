<%= content_tag(:div, class:'thumbnail') do %>
    <%= content_tag(:h5, todo.title) %>
    <%= content_tag(:small, todo.content) %>
    <%= content_tag(:p) do %>
        <%= content_tag(:small, todo.status_label, :class => ("active")) %>
        <%= link_to('show', todo, :title => "View todo: #{todo.title}") %>
    <% end %>
<% end %>